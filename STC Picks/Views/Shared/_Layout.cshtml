<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/Logo_Roland-Garros.svg" type="image/icon type">
    <title>@ViewData["Title"] - STC Picks</title>

    <!-- Bootstrap & site CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/STC_Picks.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <style>
        body {
            background-color: #f5f1e9; /* clay court cream */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        nav {
            background-color: #2E5537 !important; /* RG green */
        }

        .navbar-brand, .nav-link {
            color: #f4e8d3 !important; /* light clay text */
            font-weight: bold;
        }

            .nav-link:hover {
                color: #D1662F !important; /* clay orange */
                text-decoration: underline;
            }

        header {
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
        }

        footer {
            background-color: #2E5537;
            color: black !important;
            font-size: 0.9rem;
            text-align: center;
            padding: 10px 0;
        }


        .container {
            background-color: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        }

        .btn-primary {
            background-color: #D1662F;
            border-color: #D1662F;
        }

            .btn-primary:hover {
                background-color: #bb4e1d;
                border-color: #bb4e1d;
            }

        footer {
            background-color: #2E5537;
            color: #f4e8d3;
            font-size: 0.9rem;
            text-align: center;
            padding: 10px 0;
        }

            footer a {
                color: #f4e8d3;
                text-decoration: underline;
            }

                footer a:hover {
                    color: #D1662F;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-dark navbar-expand-sm navbar-toggleable-sm border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">STC Picks</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="UserServices" asp-action="Index">Pick'Em</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="UserServices" asp-action="EditLogin">Manage Picks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Leaderboard" asp-action="Index">Leaderboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Archive" asp-action="Index">Archive</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer fixed-bottom">
        <div class="container">
            &copy; 2025 - STC Picks - Developed by Luke Fischer
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
