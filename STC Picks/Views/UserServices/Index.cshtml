@model User

<form>
    <div style="position:relative; width:50%; left:25%; top:90px;">
        <h1 style="text-align:center;">Employee Login</h1>
        <br />
        <!-- first name input -->
        <div class="form-outline;">
            <label asp-for="firstName"></label>
            <input asp-for="firstName" class="form-control" />
        </div>
        <br />
        <!-- last name input -->
        <div class="form-outline mb-4">
            <label asp-for="lastName"></label>
            <input asp-for="lastName" class="form-control" />
        </div>
        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
        <!-- Register buttons -->
        <div class="text-center">
            <p>Not a member?  <a class="text-blue" asp-area="" asp-controller="EmployeeSignIn" asp-action="Register">Register</a></p>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
